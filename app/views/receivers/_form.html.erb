<%= form_for(@receiver, 
             :url => @url,
             :html => { :role => "form", 
                        :class => "form-inline", 
                        :remote => true}) do |f| %>
  <% if @receiver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@receiver.errors.count, "error") %> prohibited this receiver from being saved:</h2>

      <ul>
      <% @receiver.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group col-md-5 receiver">   
    <%= f.text_field :name, :class => "form-control receiver", :placeholder => "Nuevo destinatario..." %>         
  </div>
  <div class="form-group">
    <button type="submit" class="form-control btn btn-primary">Guardar</button>
  </div>
  <div class="form-group">
    <button id="cancel-<%= @receiver.new_record? ? "new" : "add" %>-receiver<%= "-#{@receiver.id}" unless @receiver.new_record? %>" type="button" class="form-control btn btn-warning">Cancelar</button>
  </div>
<% end %>
