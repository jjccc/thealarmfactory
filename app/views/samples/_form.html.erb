<%= form_for(@sample, 
             :url => @url,
             :html => { :role => "form", 
                        :class => "form-inline", 
                        :remote => true}) do |f| %>
  <% if @sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sample.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul>
      <% @sample.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group col-md-5 sample">   
    <%= f.text_field :value, :class => "form-control sample", :placeholder => "Nueva muestra..." %>         
  </div>
  <div class="form-group">
    <button type="submit" class="form-control btn btn-primary">Guardar</button>
  </div>
  <div class="form-group">
    <button id="cancel-<%= @sample.new_record? ? "new" : "add" %>-sample<%= "-#{@sample.id}" unless @sample.new_record? %>" type="button" class="form-control btn btn-warning">Cancelar</button>
  </div>
<% end %>