<div class="row">
  <div class="jumbotron col-lg-6 col-lg-offset-3">  
  
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :role => "form") do |f| %>
           
      <h2>Acceso a TheAlarmFactory</h2>
      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :placeholder => "Correo electrónico", :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :placeholder => "Contraseña", :class => "form-control" %>
      </div>
      
      <%= render "devise/shared/errors" %>      
      
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <label class="checkbox">
            <%= f.check_box :remember_me %> <%= f.label "Recuérdame" %>
          </label>
        </div>
      <% end %>
  
      <button class="btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
    <% end %>
  
    <%= render "devise/shared/links" %>
  
  </div>
</div>
  
